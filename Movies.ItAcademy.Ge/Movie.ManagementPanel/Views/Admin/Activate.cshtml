@model Movies.ManagementPanel.Models.Movie.Request.UpdateActiveRequest

@{
    ViewData["Title"] = "Activate";
}

<h1>Activate</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Activate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Name" />
            </div>
            <div class="form-group">               
                <input type="hidden" asp-for="Genre" />                
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Director" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Actors" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="StartTime" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Duration" />
            </div>
            <div class="form-group">
               <input type="hidden" asp-for="Story" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> 
                </label>
            </div>
            <div class="form-group">
               <input type="hidden" asp-for="ImageUrl" />
            </div>
            <div class="form-group">
                <input type="submit" value="გამოაქვეყნე" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
